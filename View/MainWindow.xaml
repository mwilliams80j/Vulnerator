<Controls:MetroWindow
    x:Class="Vulnerator.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
    xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
    xmlns:IconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dat="clr-namespace:System.Windows.Data;assembly=PresentationFramework"
    xmlns:diag="clr-namespace:System.Diagnostics;assembly=WindowsBase"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    xmlns:v="clr-namespace:Vulnerator.View"
    xmlns:vm="clr-namespace:Vulnerator.ViewModel"
    x:Name="winMain"
    Title="Vulnerator"
    MinWidth="750"
    MinHeight="300"
    HorizontalContentAlignment="Stretch"
    VerticalContentAlignment="Stretch"
    d:DesignHeight="1500"
    d:DesignWidth="1000"
    BorderBrush="{DynamicResource AccentColorBrush}"
    BorderThickness="1"
    DataContext="{StaticResource MainWindowViewModel}"
    GlowBrush="{DynamicResource AccentColorBrush}"
    Icon="/Vulnerator;component/Resources/chart.ico"
    KeyboardNavigation.TabNavigation="Continue"
    ResizeMode="CanResize"
    mc:Ignorable="d">

    <Controls:MetroWindow.Resources>
        <vm:MyXmlDataProvider
            x:Key="XmlConfig"
            IsAsynchronous="False"
            IsInitialLoadEnabled="True" />
        <vm:StringToBoolConverter x:Key="StringToBool" />
        <vm:CustomMultiValueConverter x:Key="CommandConverter" />
        <vm:StringSeparatorConverter x:Key="StringSeparator" />
        <vm:StringJoiningConverter x:Key="StringJoiner" />
        <vm:EmailTextLabelStringJoiner x:Key="EmailTextLabelJoiner" />
        <vm:EmailPersonnelLabelJoiner x:Key="EmailPersonnelLabelJoiner" />
        <vm:ContactInfoSeparatorConverter x:Key="ContactInfoStringSeparator" />
        <vm:ObtainFirstSplitStringValueConverter x:Key="ObtainFirstStringValue" />
        <vm:ObtainSecondSplitStringValueConverter x:Key="ObtainSecondStringValue" />
        <vm:ObtainThirdSplitStringValueConverter x:Key="ObtainThirdStringValue" />
        <vm:UpdateSystemGroupConverter x:Key="UpdateSystemGroupConverter" />
        <vm:UpdateSystemConverter x:Key="UpdateSystemConverter" />

        <v:AutoRefreshCollectionViewSource x:Key="SystemGroupListCollectionViewSource" Source="{Binding SystemGroupList}">
            <v:AutoRefreshCollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="GroupName" />
            </v:AutoRefreshCollectionViewSource.SortDescriptions>
        </v:AutoRefreshCollectionViewSource>

        <v:AutoRefreshCollectionViewSource x:Key="MonitoredSystemListCollectionViewSource" Source="{Binding MonitoredSystemList}">
            <v:AutoRefreshCollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="SystemNameAndIp" />
            </v:AutoRefreshCollectionViewSource.SortDescriptions>
        </v:AutoRefreshCollectionViewSource>

        <v:AutoRefreshCollectionViewSource x:Key="MonitoredSystemListForUpdatingCollectionViewSource" Source="{Binding MonitoredSystemListForUpdating}">
            <v:AutoRefreshCollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="SystemGroupAndNameAndIp" />
            </v:AutoRefreshCollectionViewSource.SortDescriptions>
        </v:AutoRefreshCollectionViewSource>

        <v:AutoRefreshCollectionViewSource x:Key="ContactTitleListCollectionViewSource" Source="{Binding ContactTitleList}">
            <v:AutoRefreshCollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="ContactTitleName" />
            </v:AutoRefreshCollectionViewSource.SortDescriptions>
        </v:AutoRefreshCollectionViewSource>

        <v:AutoRefreshCollectionViewSource x:Key="SystemGroupListForUpdatingCollectionViewSource" Source="{Binding SystemGroupListForUpdating}">
            <v:AutoRefreshCollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="GroupName" />
            </v:AutoRefreshCollectionViewSource.SortDescriptions>
        </v:AutoRefreshCollectionViewSource>
    </Controls:MetroWindow.Resources>

    <Controls:MetroWindow.IconTemplate>
        <DataTemplate>
            <IconPacks:PackIconModern
                Width="{TemplateBinding Width}"
                Height="{TemplateBinding Height}"
                Margin="4"
                Foreground="{DynamicResource IdealForegroundColorBrush}"
                Kind="GraphBar" />
        </DataTemplate>
    </Controls:MetroWindow.IconTemplate>

    <Controls:MetroWindow.TitleTemplate>
        <DataTemplate>
            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                <TextBlock
                    Margin="5,0"
                    VerticalAlignment="Center"
                    FontFamily="{DynamicResource HeaderFontFamily}"
                    FontSize="{DynamicResource WindowTitleFontSize}"
                    Text="{TemplateBinding Content}"
                    TextTrimming="CharacterEllipsis" />
                <Controls:WindowCommands ShowLastSeparator="False">
                    <Button
                        x:Name="projectButton"
                        Command="{Binding AboutLinksCommand}"
                        CommandParameter="{Binding Path=Name, RelativeSource={RelativeSource Self}}"
                        Content="{IconPacks:PackIconOcticons Bookmark}"
                        DataContext="{StaticResource MainWindowViewModel}"
                        ToolTip="GitHub Project Page" />
                    <Button
                        x:Name="githubButton"
                        Command="{Binding AboutLinksCommand}"
                        CommandParameter="{Binding Path=Name, RelativeSource={RelativeSource Self}}"
                        Content="{IconPacks:PackIconOcticons Octoface}"
                        DataContext="{StaticResource MainWindowViewModel}"
                        ToolTip="GitHub Repository" />
                    <Button
                        x:Name="wikiButton"
                        Command="{Binding AboutLinksCommand}"
                        CommandParameter="{Binding Path=Name, RelativeSource={RelativeSource Self}}"
                        Content="{IconPacks:PackIconOcticons Book}"
                        DataContext="{StaticResource MainWindowViewModel}"
                        ToolTip="Wiki" />
                    <Button
                        x:Name="issueButton"
                        Command="{Binding AboutLinksCommand}"
                        CommandParameter="{Binding Path=Name, RelativeSource={RelativeSource Self}}"
                        Content="{IconPacks:PackIconOcticons IssueOpened}"
                        DataContext="{StaticResource MainWindowViewModel}"
                        ToolTip="Issues" />
                </Controls:WindowCommands>
            </StackPanel>
        </DataTemplate>
    </Controls:MetroWindow.TitleTemplate>

    <Controls:MetroWindow.WindowButtonCommands>
        <Controls:WindowButtonCommands Template="{DynamicResource MahApps.Metro.Templates.WindowButtonCommands.Win10}" />
    </Controls:MetroWindow.WindowButtonCommands>


    <!--  Buttons at the top of the window for Theme, About, and News  -->
    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands>
            <Button
                x:Name="bNews"
                Command="{Binding HandleFlyoutsCommand}"
                CommandParameter="{Binding Path=Content, RelativeSource={RelativeSource Self}}"
                Content="news" />
            <Button
                x:Name="bAbout"
                Command="{Binding HandleFlyoutsCommand}"
                CommandParameter="{Binding Path=Content, RelativeSource={RelativeSource Self}}"
                Content="about" />
            <Button
                x:Name="bTheme"
                Command="{Binding HandleFlyoutsCommand}"
                CommandParameter="{Binding Path=Content, RelativeSource={RelativeSource Self}}"
                Content="theme" />
        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>

    <!--  Flyout Control  -->
    <Controls:MetroWindow.Flyouts>
        <Controls:FlyoutsControl>
            <!--  News Flyout  -->
            <Controls:Flyout
                x:Name="flyNews"
                Height="Auto"
                HorizontalAlignment="Left"
                Header="News"
                IsModal="True"
                IsOpen="{Binding NewsFlyoutIsOpen}"
                IsPinned="False"
                Position="Top"
                Theme="Adapt">
                <Grid Width="Auto" Height="Auto">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition Height="30" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <Label
                        Grid.Column="1"
                        Content="Release Updates"
                        Style="{DynamicResource styleDescriptionHeader}" />
                    <Label
                        Grid.Row="0"
                        Content="Open Issues"
                        Style="{DynamicResource styleDescriptionHeader}" />
                    <StackPanel Grid.Row="1" Orientation="Horizontal">
                        <Label Content="Open Issue Count: " />
                        <Label Content="{Binding IssueList.Count}" />
                    </StackPanel>
                    <StackPanel
                        Grid.Row="1"
                        Grid.Column="1"
                        Orientation="Horizontal">
                        <Label Content="Release Count: " />
                        <Label Content="{Binding ReleaseList.Count}" />
                    </StackPanel>
                    <ListBox
                        Grid.Row="2"
                        Margin="5,0,5,5"
                        IsSynchronizedWithCurrentItem="True"
                        ItemsSource="{Binding IssueList}"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,30" HorizontalAlignment="Stretch">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        Grid.Row="0"
                                        Margin="0,0,0,5"
                                        HorizontalAlignment="Stretch"
                                        FontSize="24"
                                        Text="{Binding Title}"
                                        TextWrapping="Wrap" />
                                    <StackPanel
                                        Grid.Row="1"
                                        Margin="0,0,0,5"
                                        HorizontalAlignment="Stretch"
                                        Orientation="Horizontal">
                                        <IconPacks:PackIconMaterial Kind="Pound" ToolTip="Issue Number" />
                                        <TextBlock HorizontalAlignment="Left" Text=" : " />
                                        <TextBlock HorizontalAlignment="Left" Text="{Binding Number}" />
                                        <TextBlock HorizontalAlignment="Left" Text="     |     " />
                                        <IconPacks:PackIconMaterial Kind="CommentMultipleOutline" ToolTip="Comments" />
                                        <TextBlock HorizontalAlignment="Left" Text=" : " />
                                        <TextBlock HorizontalAlignment="Left" Text="{Binding Comments}" />
                                        <TextBlock HorizontalAlignment="Left" Text="     |     " />
                                        <IconPacks:PackIconOcticons Kind="Milestone" ToolTip="MileStone" />
                                        <TextBlock HorizontalAlignment="Left" Text=" : " />
                                        <TextBlock HorizontalAlignment="Left" Text="{Binding Milestone}" />
                                    </StackPanel>
                                    <TextBlock
                                        Grid.Row="2"
                                        Margin="0,0,0,5"
                                        HorizontalAlignment="Stretch"
                                        Text="{Binding Body}"
                                        TextWrapping="Wrap" />
                                    <StackPanel
                                        Grid.Row="3"
                                        Margin="0,0,0,5"
                                        HorizontalAlignment="Stretch"
                                        Orientation="Horizontal">
                                        <IconPacks:PackIconOcticons Kind="Octoface" />
                                        <TextBlock
                                            HorizontalAlignment="Stretch"
                                            Style="{StaticResource styleHyperlinkTextBlock}"
                                            Text=" View on GitHub"
                                            TextWrapping="Wrap">
                                            <TextBlock.InputBindings>
                                                <MouseBinding
                                                    Command="{Binding GitHubLinksCommand}"
                                                    CommandParameter="{Binding HtmlUrl}"
                                                    MouseAction="LeftClick" />
                                            </TextBlock.InputBindings>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                    <ListBox
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="5,0,5,5"
                        IsSynchronizedWithCurrentItem="True"
                        ItemsSource="{Binding ReleaseList}"
                        ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                        ScrollViewer.VerticalScrollBarVisibility="Auto">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,0,0,30" HorizontalAlignment="Stretch">
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <TextBlock
                                        Grid.Row="0"
                                        Margin="0,0,0,5"
                                        HorizontalAlignment="Stretch"
                                        FontSize="24"
                                        Text="{Binding Name}"
                                        TextWrapping="Wrap" />
                                    <StackPanel
                                        Grid.Row="1"
                                        Margin="0,0,0,5"
                                        HorizontalAlignment="Stretch"
                                        Orientation="Horizontal">
                                        <IconPacks:PackIconMaterial Kind="Tag" ToolTip="Tag" />
                                        <TextBlock HorizontalAlignment="Left" Text=" : " />
                                        <TextBlock HorizontalAlignment="Left" Text="{Binding TagName}" />
                                        <TextBlock HorizontalAlignment="Left" Text="     |     " />
                                        <IconPacks:PackIconOcticons Kind="Calendar" ToolTip="Date Created" />
                                        <TextBlock HorizontalAlignment="Left" Text=" : " />
                                        <TextBlock HorizontalAlignment="Left" Text="{Binding CreatedAt}" />
                                        <TextBlock HorizontalAlignment="Left" Text="     |     " />
                                        <IconPacks:PackIconOcticons Kind="DesktopDownload" ToolTip="Download Count" />
                                        <TextBlock HorizontalAlignment="Left" Text=" : " />
                                        <TextBlock HorizontalAlignment="Left" Text="{Binding Downloads}" />
                                    </StackPanel>
                                    <StackPanel
                                        Grid.Row="2"
                                        Margin="0,0,0,5"
                                        HorizontalAlignment="Stretch"
                                        Orientation="Horizontal">
                                        <IconPacks:PackIconOcticons Kind="Octoface" />
                                        <TextBlock
                                            HorizontalAlignment="Stretch"
                                            Style="{StaticResource styleHyperlinkTextBlock}"
                                            Text=" View on GitHub"
                                            TextWrapping="Wrap">
                                            <TextBlock.InputBindings>
                                                <MouseBinding
                                                    Command="{Binding GitHubLinksCommand}"
                                                    CommandParameter="{Binding HtmlUrl}"
                                                    MouseAction="LeftClick" />
                                            </TextBlock.InputBindings>
                                        </TextBlock>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Controls:Flyout>
            <!--  About Flyout  -->
            <Controls:Flyout
                x:Name="flyAbout"
                Height="Auto"
                HorizontalAlignment="Left"
                Header="About"
                IsModal="True"
                IsOpen="{Binding AboutFlyoutIsOpen}"
                IsPinned="False"
                Position="Left"
                Theme="Adapt">
                <StackPanel
                    Width="Auto"
                    Height="Auto"
                    Margin="5,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                    <Grid
                        Width="Auto"
                        Height="Auto"
                        Margin="0,0,0,10"
                        HorizontalAlignment="Left">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Image
                            Grid.RowSpan="3"
                            Height="80"
                            Margin="0,5,0,0"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            Source="pack://application:,,,/Resources/chart.ico" />
                        <Label
                            Grid.Column="1"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Content="Vulnerator"
                            Style="{StaticResource styleDescriptionHeader}" />
                        <Grid Grid.Row="1" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <Label
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="Version:"
                                Style="{StaticResource styleSecondLevelHeader}" />
                            <Label
                                Grid.Column="1"
                                Width="Auto"
                                Height="Auto"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                Content="{Binding FileVersion}"
                                Style="{StaticResource styleSecondLevelHeader}" />
                        </Grid>
                        <TextBlock
                            Name="tbKcs"
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="5,0"
                            VerticalAlignment="Top"
                            Style="{StaticResource styleHyperlinkTextBlock}"
                            Text="Maintained by Kuchta Creative Services, LLC"
                            TextWrapping="NoWrap">
                            <TextBlock.InputBindings>
                                <MouseBinding
                                    Command="{Binding AboutLinksCommand}"
                                    CommandParameter="{Binding ElementName=tbKcs, Path=Name}"
                                    MouseAction="LeftClick" />
                            </TextBlock.InputBindings>
                        </TextBlock>
                    </Grid>
                    <Label
                        Height="30"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Credits"
                        Style="{StaticResource styleSecondLevelHeader}" />
                    <TextBlock
                        Name="tbAlex"
                        Margin="5,0"
                        Style="{StaticResource styleHyperlinkTextBlock}"
                        Text="Alex Kuchta - Redesign, ACAS Integration"
                        TextWrapping="NoWrap">
                        <TextBlock.InputBindings>
                            <MouseBinding
                                Command="{Binding AboutLinksCommand}"
                                CommandParameter="{Binding ElementName=tbAlex, Path=Name}"
                                MouseAction="LeftClick" />
                        </TextBlock.InputBindings>
                    </TextBlock>
                    <TextBlock
                        Name="tbJeffV"
                        Margin="5,0"
                        Style="{StaticResource styleHyperlinkTextBlock}"
                        Text="Jeff Vanerwegen - WASSP, SCAP, CKL Integration"
                        TextWrapping="NoWrap">
                        <TextBlock.InputBindings>
                            <MouseBinding
                                Command="{Binding AboutLinksCommand}"
                                CommandParameter="{Binding ElementName=tbJeffV, Path=Name}"
                                MouseAction="LeftClick" />
                        </TextBlock.InputBindings>
                    </TextBlock>
                    <TextBlock
                        Name="tbRick"
                        Margin="5,0"
                        Style="{StaticResource styleHyperlinkTextBlock}"
                        Text="Rick Murphy - POA&amp;M Integration"
                        TextWrapping="NoWrap">
                        <TextBlock.InputBindings>
                            <MouseBinding
                                Command="{Binding AboutLinksCommand}"
                                CommandParameter="{Binding ElementName=tbRick, Path=Name}"
                                MouseAction="LeftClick" />
                        </TextBlock.InputBindings>
                    </TextBlock>
                    <TextBlock
                        Name="tbJeffP"
                        Margin="5,0"
                        Style="{StaticResource styleHyperlinkTextBlock}"
                        Text="Jeff Purcell - Creator"
                        TextWrapping="NoWrap">
                        <TextBlock.InputBindings>
                            <MouseBinding
                                Command="{Binding AboutLinksCommand}"
                                CommandParameter="{Binding ElementName=tbJeffP, Path=Name}"
                                MouseAction="LeftClick" />
                        </TextBlock.InputBindings>
                    </TextBlock>
                    <Label
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Content="Description"
                        Style="{StaticResource styleSecondLevelHeader}" />
                    <TextBlock
                        Margin="5,0"
                        VerticalAlignment="Top"
                        Text="Aggregates data from the following sources: &#10;- ACAS CSV / Nessus Reports &#10;- DISA STIG Viewer Checklists &#10;- WASSP Mitigation / XACTA Reports &#10;- SCC / ACAS SCAP Benchmarks"
                        TextWrapping="Wrap" />
                </StackPanel>
            </Controls:Flyout>
            <!--  Theme Manager Flyout  -->
            <Controls:Flyout
                x:Name="flyThemeManager"
                Height="147"
                HorizontalAlignment="Left"
                Header="Theme"
                IsModal="True"
                IsOpen="{Binding ThemeFlyoutIsOpen}"
                IsPinned="False"
                Position="Bottom"
                Theme="Adapt">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height=".75*" />
                        <RowDefinition />
                        <RowDefinition Height=".75*" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <StackPanel
                        Grid.Row="0"
                        Width="164"
                        Height="37"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top">
                        <Label Content="Background Color" Style="{StaticResource styleSecondLevelHeader}" />
                    </StackPanel>
                    <StackPanel
                        Grid.Row="1"
                        Width="164"
                        Height="83"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top">
                        <ComboBox
                            x:Name="comboboxTheme"
                            Width="159"
                            Margin="5,5,0,0"
                            HorizontalAlignment="Left">
                            <ComboBoxItem
                                x:Name="comboboxitemLightTheme"
                                HorizontalAlignment="Left"
                                Content="Light Theme"
                                Selected="ChangeTheme" />
                            <ComboBoxItem
                                x:Name="comboboxitemDarkTheme"
                                HorizontalAlignment="Left"
                                Content="Dark Theme"
                                Selected="ChangeTheme" />
                        </ComboBox>
                    </StackPanel>
                    <StackPanel
                        Grid.Row="2"
                        Width="544"
                        Height="37"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top">
                        <Label Content="Accent Color" Style="{StaticResource styleSecondLevelHeader}" />
                    </StackPanel>
                    <StackPanel
                        Grid.Row="3"
                        Height="38"
                        Orientation="Horizontal">
                        <Rectangle
                            x:Name="rectPink"
                            Width="26"
                            Height="26"
                            Margin="5,0,0,0"
                            Fill="#FFF472D0"
                            MouseLeftButtonDown="SetAccentColor"
                            Stroke="Transparent"
                            ToolTip="Pink" />
                        <Rectangle
                            x:Name="rectMagenta"
                            Width="26"
                            Height="26"
                            Margin="5,0,0,0"
                            Fill="#FFD80073"
                            MouseLeftButtonDown="SetAccentColor"
                            Stroke="Transparent"
                            ToolTip="Magenta" />
                        <Rectangle
                            x:Name="rectCrimson"
                            Width="26"
                            Height="26"
                            Margin="5,0,0,0"
                            Fill="#FFA20025"
                            MouseLeftButtonDown="SetAccentColor"
                            Stroke="Transparent"
                            ToolTip="Crimson" />
                        <Rectangle
                            x:Name="rectRed"
                            Width="26"
                            Height="26"
                            Margin="5,0,0,0"
                            Fill="#FFE51400"
                            MouseLeftButtonDown="SetAccentColor"
                            Stroke="Transparent"
                            ToolTip="Red" />
                        <Rectangle
                            x:Name="rectOrange"
                            Width="26"
                            Height="26"
                            Margin="5,0,0,0"
                            Fill="#FFFA6800"
                            MouseLeftButtonDown="SetAccentColor"
                            Stroke="Transparent"
                            ToolTip="Orange" />
                        <Rectangle
                            x:Name="rectAmber"
                            Width="26"
                            Height="26"
                            Margin="5,0,0,0"
                            Fill="#FFF0A30A"
                            MouseLeftButtonDown="SetAccentColor"
                            Stroke="Transparent"
                            ToolTip="Amber" />
                        <Rectangle
                            x:Name="rectYellow"
                            Width="26"
                            Height="26"
                            Margin="5,0,0,0"
                            Fill="#FFE3C800"
                            MouseLeftButtonDown="SetAccentColor"
                            Stroke="Transparent"
                            ToolTip="Yellow" />
                        <Rectangle
                            x:Name="rectSienna"
                            Width="26"
                            Height="26"
                            Margin="5,0,0,0"
                            Fill="#FFA0522D"
                            MouseLeftButtonDown="SetAccentColor"
                            Stroke="Transparent"
                            ToolTip="Sienna" />
                        <Rectangle
                            x:Name="rectBrown"
                            Width="26"
                            Height="26"
                            Margin="5,0,0,0"
                            Fill="#FF825A2C"
                            MouseLeftButtonDown="SetAccentColor"
                            Stroke="Transparent"
                            ToolTip="Brown" />
                        <Rectangle
                            x:Name="rectOlive"
                            Width="26"
                            Height="26"
                            Margin="5,0,0,0"
                            Fill="#FF6D8764"
                            MouseLeftButtonDown="SetAccentColor"
                            Stroke="Transparent"
                            ToolTip="Olive" />
                        <Rectangle
                            x:Name="rectLime"
                            Width="26"
                            Height="26"
                            Margin="5,0,0,0"
                            Fill="#FFA4C400"
                            MouseLeftButtonDown="SetAccentColor"
                            Stroke="Transparent"
                            ToolTip="Lime" />
                        <Rectangle
                            x:Name="rectGreen"
                            Width="26"
                            Height="26"
                            Margin="5,0,0,0"
                            Fill="#FF60A917"
                            MouseLeftButtonDown="SetAccentColor"
                            Stroke="Transparent"
                            ToolTip="Green" />
                        <Rectangle
                            x:Name="rectEmerald"
                            Width="26"
                            Height="26"
                            Margin="5,0,0,0"
                            Fill="#FF008A00"
                            MouseLeftButtonDown="SetAccentColor"
                            Stroke="Transparent"
                            ToolTip="Emerald" />
                        <Rectangle
                            x:Name="rectTeal"
                            Width="26"
                            Height="26"
                            Margin="5,0,0,0"
                            Fill="#FF00ABA9"
                            MouseLeftButtonDown="SetAccentColor"
                            Stroke="Transparent"
                            ToolTip="Teal" />
                        <Rectangle
                            x:Name="rectCyan"
                            Width="26"
                            Height="26"
                            Margin="5,0,0,0"
                            Fill="#FF1BA1E2"
                            MouseLeftButtonDown="SetAccentColor"
                            Stroke="Transparent"
                            ToolTip="Cyan" />
                        <Rectangle
                            x:Name="rectSteel"
                            Width="26"
                            Height="26"
                            Margin="5,0,0,0"
                            Fill="#FF647687"
                            MouseLeftButtonDown="SetAccentColor"
                            Stroke="Transparent"
                            ToolTip="Steel" />
                        <Rectangle
                            x:Name="rectCobalt"
                            Width="26"
                            Height="26"
                            Margin="5,0,0,0"
                            Fill="#FF0050EF"
                            MouseLeftButtonDown="SetAccentColor"
                            Stroke="Transparent"
                            ToolTip="Cobalt" />
                        <Rectangle
                            x:Name="rectIndigo"
                            Width="26"
                            Height="26"
                            Margin="5,0,0,0"
                            Fill="#FF6A00FF"
                            MouseLeftButtonDown="SetAccentColor"
                            Stroke="Transparent"
                            ToolTip="Indigo" />
                        <Rectangle
                            x:Name="rectViolet"
                            Width="26"
                            Height="26"
                            Margin="5,0,0,0"
                            Fill="#FFAA00FF"
                            MouseLeftButtonDown="SetAccentColor"
                            Stroke="Transparent"
                            ToolTip="Violet" />
                        <Rectangle
                            x:Name="rectMauve"
                            Width="26"
